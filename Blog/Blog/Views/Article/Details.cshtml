@model Blog.Models.Article

@{
    ViewBag.Title = "Details";
}

<div class="container">
    <article>
        <header>
            <h2>
                @Model.Title
            </h2>
        </header>
        <p>
            @Model.Content
        </p>
        <small class="author">
            --author @Model.Author.FullName
        </small>
        <footer>
            <div class="pull-left">
                @foreach (var tag in Model.Tags)
                {
                    <span>@Html.ActionLink(tag.Name, "List", "Tag", new { @id = tag.Id }, new { @class = "btn btn-default btn-xs"})</span>
                }
            </div>
            @*<div class="form-group">
                @Html.LabelFor(m => m.Comments, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.Comments, new { @class = "form-control col-sm-4" })
                </div>
                <input type="submit" value="Create" onclick="location.href='@Url.Action("Create", "Comment")'" />
            </div>*@
            <div class="clearfix"></div>
            <h3>Comments</h3>
            @foreach (var comment in Model.Comments)
            {
                var userName = System.Web.HttpContext.Current.User.Identity.Name;
                <p>@comment.Content</p>
                <p style="font-style: italic;">from @userName</p>
            }

            <h3>Post a Comment</h3>
            <div class="form-group">
                @using (Html.BeginForm("Create", "Comment", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    @*@Html.TextArea("Name", new { @class = "form-control col-sm-8" })*@
                    @Html.Hidden("Id", Model.Id)
                    @Html.ActionLink("Create", "Create", "Comment", new { @id = Model.Id }, new { @class = "btn btn-success btn-xs" })
                    @*<input type="submit" value="Create" onclick="location.href='@Url.Action("Create", "Comment")'" />
                    <input type="submit" value="Create" class="btn btn-success" />*@
                }
            </div>
            <div class="pull-right">
                @if (User.IsInRole("Admin") || Model.IsAuthor(User.Identity.Name))
                {
                    @Html.ActionLink("Edit", "Edit", "Article", new { @id = Model.Id }, new { @class = "btn btn-success btn-xs" })
                    @Html.ActionLink("Delete", "Delete", "Article", new { @id = Model.Id }, new { @class = "btn btn-danger btn-xs" })
                }

                @Html.ActionLink("Back", "Index", "Article", null, new { @class = "btn btn-default btn-xs" })
            </div>
            <br />
            @*<div style="margin: 100px;" >
                    <script align="center" type="text/javascript" src="http://100widgets.com/js_data.php?id=234"></script>
            </div>*@
            
        </footer>
    </article>
</div>
<hr />